# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database (PostgreSQL)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USERNAME=payday_user
DATABASE_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
DATABASE_NAME=payday_production

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_TO_STRONG_REDIS_PASSWORD

# JWT Secrets (MUST be 32+ characters)
JWT_SECRET=CHANGE_THIS_TO_SECURE_JWT_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=CHANGE_THIS_TO_SECURE_REFRESH_SECRET_MIN_32_CHARS
JWT_REFRESH_EXPIRES_IN=7d

# Paystack (Production keys)
PAYSTACK_SECRET_KEY=sk_live_your_live_secret_key
PAYSTACK_PUBLIC_KEY=pk_live_your_live_public_key

# Flutterwave (Production keys)
FLUTTERWAVE_SECRET_KEY=FLWSECK-your_live_secret_key
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-your_live_public_key

# Encryption (MUST be exactly 32 characters)
ENCRYPTION_KEY=CHANGE_THIS_32_CHAR_ENCRYPTION

# Application Settings
DEFAULT_TIMEZONE=Africa/Lagos
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS (Your Vercel domain)
CORS_ORIGIN=https://payday.vercel.app

# Optional: Monitoring
SENTRY_DSN=